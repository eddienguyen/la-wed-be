{
  "name": "wedding-guest-management-backend",
  "version": "1.0.0",
  "description": "Backend API for Wedding Guest Management and Personalized Invitations",
  "main": "src/app.js",
  "type": "module",
  "scripts": {
    "start": "node src/app.js",
    "start:prod": "NODE_ENV=production node src/app.js",
    "dev": "nodemon src/app.js",
    "dev:https": "nodemon src/server.js",
    "build": "npm run prisma:generate",
    "build:info": "bash scripts/generate-build-info.sh",
    "validate:db": "bash scripts/validate-db-config.sh",
    "predeploy": "npm run validate:db",
    "deploy": "bash scripts/deploy.sh",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:migrate:deploy": "prisma migrate deploy",
    "prisma:studio": "prisma studio",
    "prisma:reset": "prisma migrate reset",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "wedding",
    "guest-management",
    "invitations",
    "express",
    "prisma"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.910.0",
    "@prisma/client": "^6.17.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "exifreader": "^4.32.0",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "express-validator": "^7.2.1",
    "fluent-ffmpeg": "^2.1.3",
    "mime-types": "^3.0.1",
    "multer": "^2.0.2",
    "prisma": "^6.17.1",
    "sanitize-html": "^2.17.0",
    "sharp": "^0.34.4",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "nodemon": "^3.1.10"
  }
}
